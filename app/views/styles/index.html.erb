<h1>Styles</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th></th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @styles.each do |style| %>
      <tr>
        <td><%= link_to style.name, style %></td>
          <td><%= link_to 'Edit', edit_style_path(style), class: 'btn btn-primary' %></td>
          <% if current_user_is_admin %>
          <td><%= link_to 'Destroy', style, class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Style', new_style_path, class:'btn btn-primary' %>
